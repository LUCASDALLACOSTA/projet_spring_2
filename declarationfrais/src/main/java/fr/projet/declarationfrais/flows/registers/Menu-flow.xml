<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
            http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <view-state id="MenuPrincipal" view="flows/register/MenuApplication" redirect="false">
        <transition on="declaration" to="MenuDeclaration" />

        <view-state id="MenuDeclaration" view="flows/register/declaration">
        </view-state>

        <end-state id="Sortie" view="flows/register/SortieApplication"/>

        <global-transitions>
            <transition on="Menu" to="MenuPrincipal"/>
            <transition to="Sortie" />
        </global-transitions>
    </view-state>
</flow>
